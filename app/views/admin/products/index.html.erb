<h1> New Product </h1>

<div class="pull-right">
  <div class="button">
    <%= link_to("Add New Product", new_admin_product_path, class: "btn btn-primary") %>
  </div>
</div>
<br><br><br>

<table class="table table-bordered">
  <thead>
      <tr>
          <th> # </th>
          <th> Product </th>
          <th> Description </th>
          <th> Quantity </th>
          <th> Price</th>
          <th> Time </th>
          <th> Option </th>
      </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
          <td> <%= product.id %></td>
          <td> <%= product.description %> </td>
          <td> <%= product.title %>  </td>
          <td> <%= product.quantity %></td>
          <td> <%= product.price %></td>
          <td> <%= product.created_at %></td>
          <td>
            <%= link_to("Edit", edit_admin_product_path(product), class: "btn btn-sm btn-success") %>
            <%= link_to("Delete", admin_product_path(product), method: :delete, data: { confirm: "Are you sure?"}, class: "btn btn-sm btn-danger") %>
          </td>
      </tr>
    <% end %>
  </tbody>

</table>
