<div class="row">
  <div class="col-md-12">

    <button class="pull-right" style="margin-bottom: 20px;">
      <%= link_to("Delete All", clean_carts_path, method: :delete, data: { confirm: "Are you sure?"} )%>
    </button>

    <h2> Cart </h2>

    <table class="table table-bordered">
    <thead>
        <tr>
            <th width="80%"> Product </th>
            <th> Price </th>
            <th> Quantity </th>
            <th> Option </th>
        </tr>
    </thead>
    <tbody>
      <% current_cart.cart_items.each do |cart_item| %>
        <tr>
            <td>
              <%= link_to product_path(cart_item.product) do %>
                <% if cart_item.product.image.present? %>
                  <%= image_tag(cart_item.product.image.thumb.url, class: "thumbnail") %>
                <% else %>
                  <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
                <% end %>
              <% end %>
            </td>
            <td> <%= cart_item.product.price %></td>
            <td>
              <%= form_for cart_item, url: cart_item_path(cart_item.product_id) do |f| %>
                <%= f.select :quantity, 1..cart_item.product.quantity %>
                <%= f.submit "Update", data: { disable_with: "Submiting..."} %>
              <% end %>
            </td>
            <td>
              <%= link_to cart_item_path(cart_item.product.id) do %>
                <i class="fa fa-trash"></i>
              <% end %>
            </td>
        </tr>
      <% end %>
    </tbody>
  </table>

    <div class="price clearfix">
      <div class="pull-right">
        <span>
         Total <%= render_cart_total_price(current_cart) %>
        </span>
      </div>
    </div>

    <hr>

    <div class="checkout pull-right">
        <%= link_to("Confirm", checkout_carts_path, method: :post, class: "btn btn-lg btn-danger") %>
    </div>




  </div>

</div>
