<div class="row">
  <div class="col-md-12">

    <h2> Order Detail </h2>

    <table class="table table-bordered">
      <thead>
        <tr>
          <th width="80%">Product Detail</th>
          <th>Price</th>
        </tr>
      </thead>
      <tbody>

        <% @product_lists.each do |product_list| %>
          <tr>
            <td>
              <%= product_list.product_name %>
            </td>
            <td>
              <%= product_list.product_price %>
            </td>
          </tr>
        <% end %>

      </tbody>
    </table>

    <div class="total clearfix">
      <span class="pull-right">
        Total <%= @order.total %> CNY
      </span>
    </div>

     <hr>

     <h2> Mailling Infomation </h2>

     <table class="table table-striped table-bordered">
      <tbody>
        <tr>
          <td>
            Purchaser
          </td>
        </tr>
        <tr>
          <td>
            <%= @order.billing_name %> - <%= @order.billing_address %>
          </td>
        </tr>
        <tr>
          <td>
            Receiver
          </td>
        </tr>
        <tr>
          <td>
            <%= @order.shipping_name %> - <%= @order.shipping_address %>
          </td>
        </tr>
      </tbody>
    </table>

    <div class="pull-left">
      <% if @order.order_placed? || @order.paid? %>
        <%= link_to("Cancel Order", apply_to_cancel_order_path(@order.token), method: :post, class: "btn btn-lg btn-danger") %>
      <% end %>
    </div>

    <% if !@order.is_paid? %>
      <div class="payment pull-right">
        <%= link_to("Wechatpay", pay_with_wechatpay_order_path(@order.token), method: :post, class: "btn btn-lg btn-info") %>
        <%= link_to("Alipay", pay_with_alipay_order_path(@order.token), method: :post, class: "btn btn-lg btn-info") %>
      </div>
    <% else %>
      <h2 class="text-center"> Order is paid </h2>
    <% end %>

    </div>

  </div>
</div>
